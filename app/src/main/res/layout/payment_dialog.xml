<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Amount to be paid"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/textGrey"
                android:textSize="18sp" />

<!--            <TextView-->
<!--                android:id="@+id/dia_lbl"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Coke"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:textColor="@color/textGrey"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:textSize="16sp" />-->

<!--            <TextView-->
<!--            android:id="@+id/dia_lbl"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Coke"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:layout_toEndOf="@+id/dia_lbl"-->
<!--            android:textColor="@color/textGrey"-->
<!--            android:textSize="16sp" />-->

            <TextView
                android:id="@+id/dia_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:text="Coke"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/textGrey"  />

            <RadioGroup
                android:id="@+id/tax_ex_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dia_quantity"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Credit" />

                <RadioButton
                    android:id="@+id/radio_ex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Cash" />

            </RadioGroup>

            <EditText
                android:id="@+id/units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tax_ex_in"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edx_bg"
                android:inputType="numberDecimal"
                android:hint="Amount"
                android:padding="10dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/units"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_bg"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:minWidth="150dp"
                android:text="Paid"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>